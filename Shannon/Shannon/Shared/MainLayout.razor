@using MudBlazor
@inherits LayoutComponentBase


<MudThemeProvider Theme="@Theme"/>

<MudLayout>
    <MudAppBar Elevation="1" >
        <NavLink href="">
        <MudText Typo="Typo.h5" Style="Color: white">Shannon Tool</MudText>
        </NavLink>
        <MudSpacer/>
        <NavLink href="entropy">
            <MudButton Variant="Variant.Filled" Style="Color: white">Shannon entropy</MudButton>
        </NavLink>
        <NavLink href="mi">
            <MudButton Variant="Variant.Filled" Style="Color: white">Mutual information</MudButton>
        </NavLink>
        <NavLink href="ami">
            <MudButton Variant="Variant.Filled" Style="Color: white">Average Mutual information</MudButton>
        </NavLink>
        <NavLink href="cmi">
            <MudButton Variant="Variant.Filled" Style="Color: white">Conditional Mutual information</MudButton>
        </NavLink>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    public MudTheme Theme = new MudTheme()
    {
      Palette = new Palette()
      {
          AppbarBackground = Colors.Grey.Darken3,
          Primary = Colors.Grey.Darken3,
          Tertiary = Colors.Grey.Darken4
      }
    };
}
